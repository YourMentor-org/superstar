*
    box-sizing border-box
html, body
    min-height 100%
body
    margin 0
    padding 0
    background-image url($images + 'layer-4.jpg')
    background-repeat no-repeat
    background-size cover
    font-size $base-size
    font-family Arial
.search-page
    padding $content-y $content-x
    text-align center
    color $base-color
    &__btn
        width 13.5em
        padding-left 0
        padding-right 0
    &__subhead
        margin-top 2.075em
        margin-bottom 1.025em
        font-size $base-size
        color $base-color
