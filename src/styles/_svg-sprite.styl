.sprite
    display inline-block
    font-size 1em
    &::before
        content ' '
        background-image url("../images/sprite/svg-sprite.svg")
        background-repeat no-repeat
        background-size 8.125em 6.6875em
        display inline-block
        .no-svg &
            background-image url("../images/sprite/svg-sprite.png")

.sprite_logo::before
    background-position -0.9375em -0.9375em
    width 2.0625em
    height 1.5625em
.sprite_plus::before
    background-position -3.9375em -0.9375em
    width 1.5em
    height 1.5em
.sprite_minus::before
    background-position -0.9375em -3.4375em
    width 1.5em
    height 0.25em
.sprite_arrow::before
    background-position -6.375em -0.9375em
    width 0.8125em
    height 1.25em
.sprite_piple::before
    background-position -0.9375em -4.625em
    width 0.4375em
    height 1.125em

.sprite_search::before
    background-position -2.3125em -4.625em
    width 0.75em
    height 1.0625em
.sprite__prev:before
    @extend .sprite:before
    background-position -4em -4.625em
    width 0.75em
    height 1.0625em
.sprite__search:before
    @extend .sprite:before
    background-position -5.6875em -4.625em
    width 0.875em
    height 0.875em

.sprite_moon::before
    background-position -4.125em -4.625em
    width 0.8125em
    height 0.875em
.sprite_star::before
    background-position -5.875em -4.625em
    width 0.6875em
    height 0.6875em
